@model EmpWithDeptListViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" asp-action="SaveEdit" asp-controller="Employee" asp-route-id="@Model.Id">
    <!--action="/Employee/SaveEdit/@Model.Id"-->
    @* <input type="hidden" name="id" value="@Model.Id"/> *@
    <div>
        @* <label>Name</label> *@
        @* <input type="text" value="@Model.Name" id="Name" name="Name" class="form form-control " /> *@
        @* @Html.TextBox("Name") *@
        @Html.LabelFor(e=>e.Name)
        @Html.EditorFor(e=>e.Name)
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name" />
        @* @Html.TextBoxFor(e=>e.Name, *@
        @*          new { style = "color:red", @class = "form form-control" }) *@
    </div>
    <div>
        <label>Address</label>
        <input type="text" value="@Model.Address" id="Address" name="Address" class="form form-control " />
    </div>
    <div>
        <label>ImageURL</label>
        <input type="text" value="@Model.ImageURL" id="ImageURL" name="ImageURL" class="form form-control " />
    </div>
    <div>
        <label>Salary</label>
        <input type="number" value="@Model.Salary" id="Salary" name="Salary" class="form form-control " />
    </div>
    <div>
        <label>JobTitle</label>
        <input type="text" value="@Model.JobTitle" id="JobTitle" name="JobTitle" class="form form-control " />
    </div>
    <div>
        <label>DepartmentId</label>
        @* <input type="number" value="@Model.DepartmentId" id="DepartmentId" name="DepartmentId" class="form form-control " /> *@
        <select id="DepartmentId" name="DepartmentId" class="form form-control ">
            @foreach (var DeptItem in Model.DeptList)
            {
                if(Model.DepartmentId== DeptItem.Id)
                {
                    <option value="@DeptItem.Id" selected>@DeptItem.Name</option>
                }
                else
                {
                    <option value="@DeptItem.Id">@DeptItem.Name</option>
                }
            }
        </select> 
    </div>
    <input type="submit" value="Save"class="btn btn-success"/>
</form>



